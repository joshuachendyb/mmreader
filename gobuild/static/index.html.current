    <script>
        // è°ƒè¯•é¢æ¿åˆ‡æ¢
        function toggleDebugPanel() {
            const panel = document.getElementById('debug-panel');
            const content = document.getElementById('debug-content');
            if (content.style.display === 'none') {
                content.style.display = 'block';
                panel.style.maxHeight = '400px';
            } else {
                content.style.display = 'none';
                panel.style.maxHeight = '30px';
            }
        }
        
        // æ·»åŠ è°ƒè¯•ä¿¡æ¯
        window.addDebugInfo = function(category, message) {
            const content = document.getElementById('debug-content');
            const panel = document.getElementById('debug-panel');
            
            // å¦‚æœè°ƒè¯•é¢æ¿DOMå…ƒç´ è¿˜æœªå‡†å¤‡å¥½ï¼Œé™é»˜è¿”å›ï¼ˆé˜²æ­¢å¯åŠ¨æ—¶å´©æºƒï¼‰
            if (!content || !panel) {
                console.log('[è°ƒè¯•æ—¥å¿—-DOMæœªå°±ç»ª]', category, message);
                return;
            }
            
            const timestamp = new Date().toLocaleTimeString();
            const line = document.createElement('div');
            line.style.cssText = 'margin: 2px 0; border-bottom: 1px solid #333; padding: 2px 0;';
            line.innerHTML = `<span style="color: #888;">[${timestamp}]</span> <span style="color: #4fc1ff;">${category}:</span> ${message}`;
            content.appendChild(line);
            content.scrollTop = content.scrollHeight;
            
            // æ˜¾ç¤ºé¢æ¿
            panel.style.display = 'block';
        };
        
        // æ¸…ç©ºè°ƒè¯•ä¿¡æ¯
        window.clearDebugInfo = function() {
            document.getElementById('debug-content').innerHTML = '';
        };
        
        // ã€ç¬¬ä¸‰å±‚é˜²å¾¡ã€‘å…¨å±€é”™è¯¯ç›‘æ§ - å…œåº•æœºåˆ¶
        // è¯´æ˜ï¼šç›‘æ§DOMä¸­æ’å…¥çš„Mermaidé”™è¯¯å…ƒç´ ï¼Œè‡ªåŠ¨æ¸…ç†
        // ä½œç”¨ï¼šä½œä¸ºæœ€åçš„ä¿é™©ï¼Œæ•è·å‰ä¸¤å±‚é˜²å¾¡æ¼æ‰çš„é”™è¯¯
        window.addEventListener('DOMContentLoaded', function() {
            const errorObserver = new MutationObserver(function(mutations) {
                let cleanedAny = false;
                
                mutations.forEach(function(mutation) {
                    mutation.addedNodes.forEach(function(node) {
                        if (node.nodeType === 1) { // Element node
                            // ä½¿ç”¨è¾…åŠ©å‡½æ•°æ£€æŸ¥å¹¶æ¸…ç†é”™è¯¯å…ƒç´ 
                            if (checkAndCleanupMermaidError(node)) {
                                cleanedAny = true;
                            }
                            
                            // ä¹Ÿæ£€æŸ¥å­å…ƒç´ 
                            if (node.querySelectorAll) {
                                const possibleErrorElements = node.querySelectorAll(
                                    'svg, [id^="chart-"], [id^="dchart-"], [id^="ichart-"], .error-text'
                                );
                                possibleErrorElements.forEach(function(el) {
                                    if (checkAndCleanupMermaidError(el)) {
                                        cleanedAny = true;
                                    }
                                });
                            }
                        }
                    });
                });
                
                // å¦‚æœæ¸…ç†äº†ä»»ä½•é”™è¯¯å…ƒç´ ï¼Œè®°å½•æ—¥å¿—
                if (cleanedAny) {
                    console.log('ã€ç¬¬ä¸‰å±‚é˜²å¾¡ã€‘å…¨å±€ç›‘æ§å·²è‡ªåŠ¨æ¸…ç†é”™è¯¯å…ƒç´ ');
                }
            });
            
            // å¼€å§‹ç›‘æ§æ•´ä¸ªbody
            errorObserver.observe(document.body, {
                childList: true,
                subtree: true
            });
            
            console.log('ã€ä¸‰å±‚é˜²å¾¡ä½“ç³»ã€‘å…¨å±€é”™è¯¯ç›‘æ§å·²å¯åŠ¨');
        });
    </script>
