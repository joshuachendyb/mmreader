                // ç¡®ä¿æ‰€æœ‰æ–‡æœ¬å†…å®¹åŒºåŸŸä¹Ÿåº”ç”¨å­—ä½“å¤§å°
                const textContents = preview.querySelectorAll('.text-content');
                textContents.forEach(el => {
                    el.style.fontSize = 'inherit';
